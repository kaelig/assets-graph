{
  "name": "Moniteur",
  "description": "Monitor your asset size over time, in your browser, or using the provided HTTP API.",
  "keywords": [
    "performance",
    "tracking"
  ],
  "website": "http://moniteur.herokuapp.com/",
  "repository": "https://github.com/kaelig/moniteur",
  "success_url": "/welcome",
  "scripts": {
    "postdeploy": "npm run record"
  },
  "env": {
    "ASSETS": {
      "description": "Assets to track in YAML (alternatively, use the configuration files)",
      "value": "Moniteur's CSS: https://moniteur.herokuapp.com/stylesheets/style.css\nMoniteur's JavaScript: https://moniteur.herokuapp.com/js/app.js",
      "required": false
    }
  },
  "addons": [
    "rediscloud",
    "scheduler:standard"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
